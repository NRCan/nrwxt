function nrcan_adobeanalytics_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.nrcan_adobeanalytics':
      return t('
        <h2>NRCan Adobe Analytics</h2>
        <h3>Instructions</h3>

        <p>Lorem ipsum dolor sit amet... </p>
      ');
  }
}

function nrcan_adobeanalytics_is_enabled() {
  return \Drupal::config('nrcan_adobeanalytics')->get('enabled') == 'on';
}

