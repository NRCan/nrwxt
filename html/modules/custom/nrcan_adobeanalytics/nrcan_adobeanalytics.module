/**
 * Implements hook_page_attachments()
 *
 */
function nrcan_adobeanalytics_page_attachments(array &$page) {
  if (nrcan_adobeanalytics_is_enabled()) {
    $page['#attached']['library'][] = 'nrcan-adobeanalytics/header';
    $page['#attached']['library'][] = 'nrcan-adobeanalytics/footer';
  }

}


